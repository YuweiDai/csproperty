 .content-container {}

 .header
 {
   position: relative;
 }
 .header>image {
   width: 100%;
   height: 463.5rpx;
 }

 .header .backBtn
 {
   background-color: #3296FA;
   color: white;
   position: fixed;
   left: 0;
   padding: 10rpx 0 10rpx 20rpx;
   top: 40rpx;
   width: 120rpx;
   border-top-right-radius: 10rpx;
   border-bottom-right-radius: 10rpx;
 }

 .content {
   padding: 0 10rpx;
 }

 .section {
   margin-bottom: 10rpx;
   padding: 0 10rpx;
   background-color: white;
 }

 .content .titleInfo {
   padding: 0 10rpx 20rpx;
   border-bottom: 1px solid #F0F0F0;
 }

 .content .titleInfo .name {
   font-size: 60rpx;
   font-weight: bolder;
   margin-bottom: 20rpx;
 }

 .content .titleInfo .tags .tag {
   font-size: 24rpx;
   margin-right: 10rpx;
   padding: 7rpx 12rpx;
   width: 70rpx;
   text-align: center;
   color: white;
   border-radius: 5rpx;
   display: inline-block;
 }

 .content .titleInfo .info-list .info-item {
   margin: 10rpx 0;
 }

 .content .titleInfo .info-list .info-item {
   margin: 8pt 0;
   font-size: 30rpx;
   font-weight: bold;
 }

 .content .titleInfo .info-list .info-item>view {
   display: inline-block;
 }

 .content .titleInfo .info-list .info-item .label {
   color: #B9BBBC;
   width: 130rpx;
   margin-right: 20rpx;
 }

 .content .titleInfo .info-list .info-item .value {
   width: 500rpx;
 }

 .content .titleInfo .info-list .info-item .more {
   width: 60rpx;
   position: relative;
   text-align: center;
 }

 .content .titleInfo .info-list .info-item .more.mapBtn {
   color: #3296FA;
 }

 .content .panorama {
   width: 730rpx;
   padding: 0;
   position: relative;
 }

 .content .panorama image.bg {
   width: 100%;
   height: 300rpx;
 }

 .content .panorama image.icon {
   width: 150rpx;
   height: 150rpx;
   position: absolute;
   left: 50%;
   top: 50%;
   margin-left: -75rpx;
   margin-top: -75rpx;
   /* border: 1px solid white;
   border-radius: 50%; */
 }

 .content .panorama .tag {
   position: absolute;
   left: 50%;
   bottom: 20rpx;
   margin-left: -70rpx;
   width: 120rpx;
   text-align: center;
   color: white;
   border-radius: 15rpx;
   padding: 5rpx 10rpx;
   background-color: #F44446;
 }

 .content .moreInfo .navBar {
   margin-bottom: 20rpx;
 }

 .content .moreInfo .navBar .nav-item {
   display: inline-block;
   width: 230rpx;
   text-align: center;
   padding: 10rpx 0;
 }

 .content .moreInfo .navBar .nav-item.active {
   color: #3296FA;
   border-bottom: #3296FA solid 4rpx;
 }

 .content .moreInfo .info-list {
   font-size: 30rpx;
 }

 .content .moreInfo .info-list .info-item {
   padding: 10rpx 0;
   border-bottom: 1px solid #F5F5F5;
   margin-bottom: 10rpx;
 }

 .content .moreInfo .info-list .info-item:last-child {
   border-bottom: none;
 }

 .footer-container {
   border-top: 2rpx solid #DCDDDD;
   height: 100rpx;
   padding: 0 20rpx;
   position: fixed;
   bottom: 0;
   background-color: #F6F6F6;
 }

 .footer-container button {
   margin: 10rpx 0;
   display: inline-block;
   width: 345rpx;
   height: 80rpx;
   line-height: 80rpx;
 }

 .footer-container button.shareBtn {
   margin-right: 20rpx;
 }